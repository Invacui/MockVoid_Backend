# Production Environment Configuration
# This file contains production-specific environment variables
# IMPORTANT: Keep this file secure and never commit to version control

# Server Configuration
NODE_ENV=production
PORT=3001
BASE_URL=https://your-production-domain.com

# Database Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net
DB_NAME=express_boilerplate_prod

# JWT Configuration
PRIVATE_TOKEN_KEY=your-super-secure-production-jwt-secret-key-minimum-32-characters

# CORS Configuration
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-admin-domain.com

# Logging Configuration
LOG_LEVEL=warn
LOG_FILE_MAX_SIZE=50m
LOG_FILE_MAX_FILES=30d

# Production Features
ENABLE_SWAGGER=false
ENABLE_DEBUG_ROUTES=false
ENABLE_QUERY_LOGGING=false

# Rate Limiting (Production - Strict)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database Connection Pool (Production)
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000

# Session Configuration (Production)
SESSION_SECRET=your-super-secure-production-session-secret
SESSION_COOKIE_MAX_AGE=3600000

# Email Configuration (Production)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=noreply@your-domain.com
SMTP_PASS=your-secure-email-password

# Redis Configuration (Production)
REDIS_URL=redis://your-redis-cluster:6379
REDIS_PASSWORD=your-redis-password

# File Upload Configuration
MAX_FILE_SIZE=52428800
UPLOAD_PATH=/var/www/uploads

# Security Configuration (Production - Strict)
BCRYPT_ROUNDS=12
JWT_EXPIRY=1h
CORS_CREDENTIALS=true

# SSL/TLS Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# Monitoring and Analytics (Production)
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_ENDPOINT=/metrics

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Error Reporting (Production)
SENTRY_DSN=your-sentry-dsn-here
ERROR_REPORTING_ENABLED=true

# Performance Monitoring
APM_SERVICE_NAME=express-boilerplate
APM_SERVICE_VERSION=1.0.0
