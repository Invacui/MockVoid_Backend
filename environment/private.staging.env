# Staging Environment Configuration
# This file contains staging-specific environment variables

# Server Configuration
NODE_ENV=staging
PORT=3001
BASE_URL=https://staging.your-domain.com

# Database Configuration
MONGO_URI=mongodb+srv://staging-username:staging-password@staging-cluster.mongodb.net
DB_NAME=express_boilerplate_staging

# JWT Configuration
PRIVATE_TOKEN_KEY=staging-super-secure-jwt-secret-key-for-staging-environment

# CORS Configuration
ALLOWED_ORIGINS=https://staging-frontend.your-domain.com,https://staging-admin.your-domain.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=30m
LOG_FILE_MAX_FILES=14d

# Staging Features
ENABLE_SWAGGER=true
ENABLE_DEBUG_ROUTES=false
ENABLE_QUERY_LOGGING=true

# Rate Limiting (Staging - Moderate)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500

# Database Connection Pool (Staging)
DB_POOL_MIN=3
DB_POOL_MAX=15
DB_POOL_IDLE_TIMEOUT=30000

# Session Configuration (Staging)
SESSION_SECRET=staging-session-secret-key
SESSION_COOKIE_MAX_AGE=7200000

# Email Configuration (Staging)
SMTP_HOST=smtp.staging-provider.com
SMTP_PORT=587
SMTP_USER=staging@your-domain.com
SMTP_PASS=staging-email-password

# Redis Configuration (Staging)
REDIS_URL=redis://staging-redis-cluster:6379
REDIS_PASSWORD=staging-redis-password

# File Upload Configuration
MAX_FILE_SIZE=20971520
UPLOAD_PATH=/var/staging/uploads

# Security Configuration (Staging - Moderate)
BCRYPT_ROUNDS=11
JWT_EXPIRY=2h
CORS_CREDENTIALS=true

# SSL/TLS Configuration
SSL_CERT_PATH=/path/to/staging/ssl/cert.pem
SSL_KEY_PATH=/path/to/staging/ssl/private.key

# Monitoring and Analytics (Staging)
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_ENDPOINT=/metrics

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Error Reporting (Staging)
SENTRY_DSN=your-staging-sentry-dsn-here
ERROR_REPORTING_ENABLED=true

# Performance Monitoring
APM_SERVICE_NAME=express-boilerplate-staging
APM_SERVICE_VERSION=1.0.0-staging

# Staging-specific features
STAGING_DATA_CLEANUP=true
STAGING_BACKUP_ENABLED=true
STAGING_ANALYTICS_ENABLED=true
