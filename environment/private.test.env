# Test Environment Configuration
# This file contains test-specific environment variables

# Server Configuration
NODE_ENV=test
PORT=3002
BASE_URL=http://localhost

# Database Configuration
MONGO_URI=mongodb://localhost:27017
DB_NAME=express_boilerplate_test

# JWT Configuration
PRIVATE_TOKEN_KEY=test-jwt-secret-key-for-testing-only

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3002

# Logging Configuration
LOG_LEVEL=error
LOG_FILE_MAX_SIZE=5m
LOG_FILE_MAX_FILES=1d

# Test Features
ENABLE_SWAGGER=false
ENABLE_DEBUG_ROUTES=false
ENABLE_QUERY_LOGGING=false

# Rate Limiting (Test - Very Permissive)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10000

# Database Connection Pool (Test - Minimal)
DB_POOL_MIN=1
DB_POOL_MAX=5
DB_POOL_IDLE_TIMEOUT=10000

# Session Configuration (Test)
SESSION_SECRET=test-session-secret
SESSION_COOKIE_MAX_AGE=3600000

# Email Configuration (Test - Mock)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=test@example.com
SMTP_PASS=test-password

# Redis Configuration (Test - Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# File Upload Configuration
MAX_FILE_SIZE=1048576
UPLOAD_PATH=./test-uploads

# Security Configuration (Test - Relaxed)
BCRYPT_ROUNDS=4
JWT_EXPIRY=1h
CORS_CREDENTIALS=true

# Test Database Configuration
TEST_DB_CLEANUP=true
TEST_DB_ISOLATION=true

# Mock Services (Test)
MOCK_EMAIL_SERVICE=true
MOCK_PAYMENT_SERVICE=true
MOCK_EXTERNAL_APIS=true

# Test Timeouts
TEST_TIMEOUT=10000
ASYNC_TEST_TIMEOUT=15000

# Coverage Configuration
COVERAGE_THRESHOLD=80
COVERAGE_REPORTERS=text,lcov,html

# Performance Testing
PERF_TEST_ENABLED=false
PERF_TEST_DURATION=30000
